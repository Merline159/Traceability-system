<%- include('header') %>
<div class="nav">
  <div class="ui grid">
    <div class="four wide column"></div>

    <div class="eight wide column">
      <span>
        <form action="/search" method="GET">
          <div class="">
          <input type="text" name="postId" placeholder="Search" class="ui form segment" />
          <button type="submit" class="ui form segment">搜索</button>
          </div>
        </form>
      </span>
    </div>
  </div>
</div>
<% posts.forEach(function (post) { %>
  <%- include('components/post-content', { post: post }) %>
<% }) %>

<br />
<div>
    <% if (!isFirstPage) { %>
  <span class="prepage"><a title="上一页" href="?p=<%= page-1 %>">上一页</a></span>
    <% } %>

    <% if (!isLastPage) { %>
  <span class="nextpage"><a title="下一页" href="?p=<%= page+1 %>">下一页</a></span>
    <% } %>
</div>


<%- include('footer') %>